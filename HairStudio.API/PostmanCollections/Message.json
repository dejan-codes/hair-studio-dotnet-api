{
  "info": {
    "name": "HairStudio Message API",
    "_postman_id": "message-api-collection-env",
    "description": "Postman collection for MessageController endpoints (variables from environment)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Messages",
      "request": {
        "method": "GET",
        "header": [
          {"key":"Authorization","value":"Bearer {{token}}"}
        ],
        "url": {
          "raw": "{{baseUrl}}/api/Message?page=1&rowsPerPage=10",
          "host": ["{{baseUrl}}"],
          "path": ["api","Message"],
          "query": [
            {"key":"page","value":"1"},
            {"key":"rowsPerPage","value":"10"}
          ]
        }
      }
    }
  ]
}