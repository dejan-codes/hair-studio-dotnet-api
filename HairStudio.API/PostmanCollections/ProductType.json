{
  "info": {
    "name": "HairStudio ProductType API",
    "_postman_id": "productType-api-collection-env",
    "description": "Postman collection for testing ProductTypeController endpoints (variables from environment)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET ProductTypes (Paged)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/ProductType?page=1&rowsPerPage=10",
          "host": ["{{baseUrl}}"],
          "path": ["api","ProductType"],
          "query": [
            {"key":"page","value":"1"},
            {"key":"rowsPerPage","value":"10"}
          ]
        }
      }
    },
    {
      "name": "GET ProductTypes Dropdown",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/ProductType/types-dropdown",
          "host": ["{{baseUrl}}"],
          "path": ["api","ProductType","types-dropdown"]
        }
      }
    },
    {
      "name": "POST Create ProductType",
      "request": {
        "method": "POST",
        "header": [
          {"key":"Content-Type","value":"application/json"},
          {"key":"Authorization","value":"Bearer {{token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"New ProductType Name\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/ProductType",
          "host": ["{{baseUrl}}"],
          "path": ["api","ProductType"]
        }
      }
    },
    {
      "name": "PUT Update ProductType",
      "request": {
        "method": "PUT",
        "header": [
          {"key":"Content-Type","value":"application/json"},
          {"key":"Authorization","value":"Bearer {{token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated ProductType Name\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/ProductType/1",
          "host": ["{{baseUrl}}"],
          "path": ["api","ProductType","1"]
        }
      }
    },
    {
      "name": "DELETE Delete ProductType",
      "request": {
        "method": "DELETE",
        "header": [
          {"key":"Authorization","value":"Bearer {{token}}"}
        ],
        "url": {
          "raw": "{{baseUrl}}/api/ProductType/1",
          "host": ["{{baseUrl}}"],
          "path": ["api","ProductType","1"]
        }
      }
    }
  ]
}